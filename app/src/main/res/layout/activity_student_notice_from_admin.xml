<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.activities.student.StudentNoticeFromAdminActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_stu_notice_from_ad_back"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_regular"
            android:text="Уведомления "
            android:textAllCaps="true"
            android:textColor="?attr/colorControlNormal"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_edit_notifications_24"
                android:drawableTint="?attr/colorControlNormal"
                android:text="Содержание сообщения"

                android:textColor="@color/myColor8" />

            <TextView
                android:id="@+id/tv_stu_notice_from_ad_content"
                style="@style/modifiedEditText"
                android:layout_margin="10dp"
                android:background="@drawable/border_image_view"
                android:backgroundTint="?attr/colorControlNormal"
                android:lines="10"
                android:maxLines="10"
                android:padding="8dp"
                android:scrollbars="vertical" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_stu_notice_from_ad_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Отправлять"
            android:theme="@style/AppTheme.MyButton1" />

        <Button
            android:id="@+id/btn_stu_notice_from_ad_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Назад"
            android:theme="@style/AppTheme.MyButton3" />
    </LinearLayout>


</LinearLayout>