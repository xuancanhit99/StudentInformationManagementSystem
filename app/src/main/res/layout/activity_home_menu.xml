<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_admin_drawer"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.admin.AdminMenuActivity"

    tools:openDrawer="start">

    <include
        layout="@layout/admin_app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv_admin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#0E66B9"
        app:headerLayout="@layout/admin_nav_header"
        app:itemBackground="@drawable/menu_item_padding"
        app:itemHorizontalPadding="40dp"
        app:itemIconTint="#fff"
        app:itemTextAppearance="@style/TextViewStyle"
        app:menu="@menu/admin_nav_drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>