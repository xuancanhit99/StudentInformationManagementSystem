<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorGrey"
android:orientation="vertical"
tools:context=".StudentMenuActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryDark2"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Manager"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_stu_avt"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/border_image_view"
                android:padding="1dp"
                android:src="@drawable/graduated" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Name:"
                        android:textColor="@color/myColor3" />

                    <TextView
                        android:id="@+id/tv_stu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Student â„–:"
                        android:textColor="@color/myColor3" />

                    <TextView
                        android:id="@+id/tv_stu_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Status:"
                        android:textColor="@color/myColor3" />

                    <TextView
                        android:id="@+id/tv_stu_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_stu_view_profile"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/myColor1"
            android:drawableStart="@drawable/ic_baseline_format_list_bulleted_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="10dp"
            android:text="View Profile"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/btn_stu_update_profile"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark2"
            android:drawableStart="@drawable/ic_baseline_edit_note_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="10dp"
            android:text="UpDate Profile"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/btn_stu_change_password"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/myColor8"
            android:drawableStart="@drawable/ic_baseline_password_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="10dp"
            android:text="Change Password"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold">
        </Button>

        <Button
            android:id="@+id/btn_stu_logout"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@color/myColor3"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_baseline_logout_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="10dp"
            android:text="LOGOUT"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold">

        </Button>
    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>