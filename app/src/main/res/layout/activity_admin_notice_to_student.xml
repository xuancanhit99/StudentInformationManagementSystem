<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="5dp"
tools:context=".AdminNoticeToStudentActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryDark2">
    <ImageView
        android:id="@+id/iv_ad_notice_to_stu_back"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:padding="7dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Notice To All Student "
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_edit_notifications_24"
                android:drawableTint="?attr/colorControlNormal"
                android:textColor="@color/myColor8"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                android:text="Message content"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_ad_notice_to_stu_content"
                    style="@style/modifiedEditText"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:background="@drawable/border_image_view"
                    android:backgroundTint="?attr/colorControlNormal"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:lines="10"
                    android:maxLines="10"
                    android:scrollbars="vertical"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button android:theme="@style/AppTheme.MyButton1"
            android:id="@+id/btn_ad_notice_to_stu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Send" />

        <Button android:theme="@style/AppTheme.MyButton3"
            android:id="@+id/btn_ad_notice_to_stu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Back" />
    </LinearLayout>


</LinearLayout>