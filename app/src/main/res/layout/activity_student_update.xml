<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_stu_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentUpdateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark2">
            <ImageView
                android:id="@+id/iv_stu_update_exit"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Student"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/iv_stu_update_avt"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="1dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/border_image_view"
                android:src="@drawable/graduated" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_stu_update_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.MyButton2"
                    android:drawableStart="@drawable/ic_baseline_photo_camera_24"
                    android:text="   Take Photo   " />

                <Button
                    android:id="@+id/btn_stu_update_choose_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.MyButton6"
                    android:drawableStart="@drawable/ic_baseline_insert_photo_24"
                    android:text="Choose Photo" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_stu_update_no"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_confirmation_number_24"
                android:drawableTint="?attr/colorControlNormal"
                android:maxLines="1"
                android:hint="Student â„–"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_stu_update_name"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_person_pin_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Full Name"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_stu_update_dob"
                    style="@style/modifiedEditText"
                    android:clickable="false"

                    android:cursorVisible="false"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:drawableTint="?attr/colorControlNormal"
                    android:focusable="false"

                    android:focusableInTouchMode="false"
                    android:hint="Date of birth"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/im_btn_stu_update_del_dob"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="3dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_view_stream_24"
                android:textAlignment="center" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_stu_update_class"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_class_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Class Name"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_stu_update_phone"
                style="@style/modifiedEditText"
                android:maxLines="1"
                android:inputType="phone"
                android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Phone Number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_stu_update_email"
                style="@style/modifiedEditText"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/round_mail_outline_24"
                android:drawableTint="?attr/colorControlNormal"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingTop="23dp"
            android:layout_marginStart="4dp"
            android:weightSum="10"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawableTint="?attr/colorControlNormal"
                android:text="Gender" />

            <RadioGroup
                android:id="@+id/rg_stu_update_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_stu_update_male"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rb_stu_update_female"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content"
                    android:text="Female" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button android:theme="@style/AppTheme.MyButton1"
                android:id="@+id/btn_stu_update_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Save" />

            <Button android:theme="@style/AppTheme.MyButton7"
                android:id="@+id/btn_stu_update_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Delete" />

            <Button android:theme="@style/AppTheme.MyButton3"
                android:id="@+id/btn_stu_update_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Back" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>


