<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="5dp"
tools:context=".AdminStudentViewProfileActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryDark2">
    <ImageView
        android:id="@+id/iv_ad_stu_view_profile_exit"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:padding="7dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Information"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_ad_stu_view_profile_avt"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_image_view"
            android:layout_width="120dp"
            android:padding="1dp"
            android:layout_height="120dp"
            android:src="@drawable/graduated" />
        <TextView
            android:id="@+id/tv_ad_stu_view_profile_active"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/myColor8"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Student â„–        " />

                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_no"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Full Name         " />

                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Date of birth     " />

                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_dob"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Class Name     " />

                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_class"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Gender                " />
                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_gender"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Phone Number " />

                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_phone"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/myColor8"
                    android:text="Email                  " />

                <TextView
                    android:id="@+id/tv_ad_stu_view_profile_email"
                    android:layout_width="wrap_content"
                    android:textColor="@color/myColor8"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <Button android:theme="@style/AppTheme.MyButton1"
        android:id="@+id/btn_ad_stu_view_profile_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Update" />

    <Button android:theme="@style/AppTheme.MyButton3"
        android:id="@+id/btn_ad_stu_view_profile_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Back" />
</LinearLayout>
</LinearLayout>