<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".AdminForgotPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark2">
        <ImageView
            android:id="@+id/iv_admin_forgot_password_exit"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Admin Forgot Password"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_admin_forgot_password_email"
            style="@style/modifiedEditText"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/round_mail_outline_24"
            android:drawableTint="?attr/colorControlNormal"
            android:maxLines="1"
            android:hint="Admin Email"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_admin_forgot_password_id"
            style="@style/modifiedEditText"
            android:drawableStart="@drawable/ic_baseline_person_pin_circle_24"
            android:drawableTint="?attr/colorControlNormal"
            android:maxLines="1"
            android:hint="Admin ID"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="@dimen/loginViewsMargin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_admin_forgot_password_new_password"
            style="@style/modifiedEditText"
            android:hint=" New Password"
            android:drawableStart="@drawable/ic_baseline_password_24"
            android:drawableTint="?attr/colorControlNormal"
            android:inputType="textPassword"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:paddingBottom="50dp"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="@dimen/loginViewsMargin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_admin_forgot_password_retype_new_password"
            style="@style/modifiedEditText"

            android:hint=" Retype New Password"
            android:drawableStart="@drawable/ic_baseline_password_24"
            android:drawableTint="?attr/colorControlNormal"
            android:inputType="textPassword"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button android:theme="@style/AppTheme.MyButton1"
            android:id="@+id/btn_admin_forgot_password_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Save" />


        <Button android:theme="@style/AppTheme.MyButton3"
            android:id="@+id/btn_admin_forgot_password_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Back" />
    </LinearLayout>
</LinearLayout>